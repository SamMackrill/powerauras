<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<!-- Templates
		All templates are prefixed with Powa, and use a Template suffix.
		> BorderedFrame     -  Simple frame with a darkened tooltip border.
		> Slider            -  Slider with editbox and +/- buttons.
		> TabButton         -  Button template for tabs.
		> TabDialog         -  Basic dialog frame, best used inside of a tab.
		> TabFrame          -  Tabbed frame template [DEPRECATED: Use BorderedFrame instead and call PowaTabFrame_Init() in your OnLoad script.]
		> TabSidebarButton  -  Button template for a tabbed sidebar.
	-->	
	<Frame name="PowaBorderedFrameTemplate" virtual="true" lolattr="true">
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="4" right="4" top="4" bottom="4" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
			<Color r="0.0" g="0.0" b="0.0" a="0.75" />
			<BorderColor r="0.4" g="0.4" b="0.4" a="1.0" />
		</Backdrop>
	</Frame>
	
	<Frame name="PowaSliderTemplate" virtual="true">
		<Size>
			<AbsDimension x="75" y="45" />
		</Size>
		<Frames>
			<EditBox name="$parentValue" parentKey="Value" autofocus="false" font="GameFontHighlightSmall" justifyH="CENTER">
				<Size>
					<AbsDimension x="70" y="14" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOM" />
				</Anchors>
				<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
					<EdgeSize>
						<AbsValue val="1" />
					</EdgeSize>
					<TileSize>
						<AbsValue val="5" />
					</TileSize>
					<Color r="0.0" g="0.0" b="0.0" a="0.5" />
					<BorderColor r="0.3" g="0.3" b="0.3" a="0.8" />
				</Backdrop>
				<Scripts>
					<OnEscapePressed>
						self:SetText(format((self:GetParent().Format or "%.0f"), self:GetParent().Slider:GetValue()));
						self:ClearFocus();
					</OnEscapePressed>
					<OnEnterPressed>
						if(tonumber(self:GetText(), 10)) then
							self:GetParent().Slider:SetValue(tonumber(self:GetText(), 10));
						else
							self:SetText(format((self:GetParent().Format or "%.0f"), self:GetParent().Slider:GetValue()));
						end
						self:ClearFocus();						
					</OnEnterPressed>
					<OnLoad>
						-- Setting justifyH in the XML doesn't work.
						self:SetJustifyH("CENTER");
					</OnLoad>
				</Scripts>
			</EditBox>
			<Slider name="$parentSlider" parentKey="Slider" minValue="1" maxValue="100" defaultValue="50" orientation="HORIZONTAL" enableMouse="true">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="0" y="-14" />
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="0" y="14" />			
					</Anchor>
				</Anchors>
				<HitRectInsets>
					<AbsInset left="0" right="0" top="-10" bottom="-10" />
				</HitRectInsets>
				<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
					<EdgeSize>
						<AbsValue val="8" />
					</EdgeSize>
					<TileSize>
						<AbsValue val="8" />
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="14" bottom="20" />
					</BackgroundInsets>
				</Backdrop>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" parentKey="Text" text="TEST" inherits="GameFontNormalSmall">
							<Size>
								<AbsDimension y="14" />
							</Size>
							<Anchors>
								<Anchor point="BOTTOM" relativePoint="TOP" />
							</Anchors>
						</FontString>
						<FontString name="$parentLow" parentKey="Low" inherits="GameFontHighlightSmall">
							<Size>
								<AbsDimension y="14" />
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" />
							</Anchors>
						</FontString>
						<FontString name="$parentHigh" parentKey="High" inherits="GameFontHighlightSmall">
							<Size>
								<AbsDimension y="14" />
							</Size>
							<Anchors>
								<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnValueChanged>
						self:GetParent().Value:SetText(format((self:GetParent().Format or "%.0f"), self:GetValue()));
					</OnValueChanged>
					<OnLoad>
						self.Low:SetText(select(1, self:GetMinMaxValues()));
						self.High:SetText(select(2, self:GetMinMaxValues()));
					</OnLoad>
				</Scripts>
				<ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
					<Size>
						<AbsDimension x="32" y="32" />
					</Size>
				</ThumbTexture>
			</Slider>
		</Frames>
	</Frame>
	
	<Button name="PowaTabButtonTemplate" virtual="true" text="Tab">
		<Size>
			<AbsDimension x="128" y="29" />
		</Size>
		<NormalFont style="GameFontNormalSmall" />
		<HighlightFont style="GameFontHighlightSmall"/>
		<DisabledFont style="GameFontHighlightSmall"/>
		<NormalTexture file="Interface\PaperDollInfoFrame\UI-Character-InActiveTab" />
		<HighlightTexture file="Interface\PaperDollInfoFrame\UI-Character-Tab-RealHighlight" alphaMode="ADD">
			<Anchors>
				<Anchor point="TOPLEFT">
					<Offset>
						<AbsDimension x="0" y="-4"/>
					</Offset>
				</Anchor>
				<Anchor point="BOTTOMRIGHT">
					<Offset>
						<AbsDimension x="0" y="1"/>
					</Offset>
				</Anchor>
				<TexCoords left="0" right="1" top="0.2" bottom="0.6" />
			</Anchors>
		</HighlightTexture>
		<ButtonText name="$parentText">
			<Size>
				<AbsDimension x="0" y="10"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-2"/>
					</Offset>
				</Anchor>
			</Anchors>
		</ButtonText>
	</Button>
	
	<Frame name="PowaTabDialogTemplate" virtual="true">
		<Frames>
			<Button name="$parentAcceptButton" parentKey="AcceptButton" inherits="UIPanelButtonTemplate2" text="Save">
				<Size>
					<AbsDimension x="118" y="22" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-5" y="5" />
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentCancelButton" parentKey="CancelButton" inherits="UIPanelButtonTemplate2" text="Cancel">
				<Size>
					<AbsDimension x="118" y="22" />
				</Size>
				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parentAcceptButton" relativePoint="LEFT">
						<Offset x="-10" y="0" />
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
	</Frame>
	
	<Frame name="PowaTabFrameTemplate" inherits="PowaBorderedFrameTemplate" virtual="true">
	</Frame>
	
	<Button name="PowaTabSidebarButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="156" y="24"/>
		</Size>
		<NormalFont style="GameFontNormalSmall" />
		<HighlightFont style="GameFontHighlightSmall" />
		<DisabledFont style="GameFontHighlightSmall" />
		<ButtonText name="$parentText">
			<Size>
				<AbsDimension x="0" y="10"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
		</ButtonText>
		<HighlightTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphaMode="ADD" />
		<DisabledTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphamode="ADD" />
	</Button>
	
	<!-- Editor Frame -->
	<Frame name="PowaEditor" toplevel="true" movable="true" parent="UIParent" hidden="false" frameStrata="MEDIUM" enableMouse="true" enableKeyboard="true">
		<Size>
          <AbsDimension x="550" y="650" />
        </Size>
        <Anchors>
			<Anchor point="CENTER" relativeTo="UIParent">
				<Offset>
					<AbsDimension x="0" y="50" />
				</Offset>
			</Anchor>
        </Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Scripts>
			<OnMouseDown>
				if(button == "LeftButton" and not self.isMoving) then
					self:StartMoving();
					self.isMoving = true;
				end
			</OnMouseDown>
			<OnMouseUp>
				if(button == "LeftButton" and self.isMoving) then
					self:StopMovingOrSizing();
					self.isMoving = false;
				end
			</OnMouseUp>
			<OnHide>
				if(self.isMoving) then
					self:StopMovingOrSizing();
					self.isMoving = false;
				end
			</OnHide>
		</Scripts>
		<Layers>
			<Layer level="ARTWORK">
				<Texture file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="300" y="68" />
					</Size>
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="13"/>
					</Anchors>					
				</Texture>
				<FontString name="$parentTitle" inherits="GameFontNormal" text="Aura Editor" justifyH="CENTER" justifyV="TOP">
					<Size>
						<AbsDimension x="300" y="68" />
					</Size>
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-2"/>
					</Anchors>
				</FontString>
				<Texture file="Interface\DialogFrame\UI-DialogBox-Corner">
					<Size x="32" y="32" />	
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parent">
							<Offset>
								<AbsDimension x="-4" y="-4" />
							</Offset>
						</Anchor>		
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Frame name="$parentDisplay" inherits="PowaBorderedFrameTemplate">
				<Size>
				  <AbsDimension y="250" />
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent">
						<Offset>
							<AbsDimension x="0" y="-55" />
						</Offset>
					</Anchor>
					<Anchor point="LEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="15" y="0" />
						</Offset>
					</Anchor>
					<Anchor point="RIGHT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="-15" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<Frames>
					<Frame name="$parentAura" parentKey="Aura" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parent">
								<Offset>
									<AbsDimension x="0" y="0" />
								</Offset>
							</Anchor>
							<Anchor point="BOTTOMRIGHT" relativeTo="$parent">
								<Offset>
									<AbsDimension x="0" y="0" />
								</Offset>
							</Anchor>
						</Anchors>
						<Frames>
							<Frame name="$parentSidebar" parentKey="Sidebar">
								<Layers>
									<Layer level="ARTWORK">
										<Texture>
											<Anchors>
												<Anchor point="TOPLEFT" relativeTo="$parent">
													<Offset>
														<AbsDimension x="4" y="-4" />
													</Offset>
												</Anchor>
												<Anchor point="BOTTOMRIGHT" relativeTo="$parent">
													<Offset>
														<AbsDimension x="-8" y="4" />
													</Offset>
												</Anchor>
											</Anchors>
											<Color r="0" g="0" b="0" a="0.535" />
										</Texture>
										<Texture file="Interface\COMMON\ShadowOverlay-Left">
											<Size>
												<AbsDimension x="16" />
											</Size>
											<Anchors>
												<Anchor point="TOPRIGHT" relativeTo="$parent">
													<Offset>
														<AbsDimension x="8" y="-4" />
													</Offset>
												</Anchor>
												<Anchor point="BOTTOMRIGHT" relativeTo="$parent">
													<Offset>
														<AbsDimension x="8" y="4" />
													</Offset>
												</Anchor>
											</Anchors>
											<Color r="0" g="0" b="0" a="0.75" />
										</Texture>
									</Layer>
								</Layers>
							</Frame>
							<Frame name="$parentMain" parentKey="Main">
								<Anchors>
									<Anchor point="TOPLEFT" relativeTo="$parent" />
									<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
								</Anchors>
								<Frames>
									<Frame name="$parentConfig" parentKey="Config">
										<Size>
											<AbsDimension x="350" />
										</Size>
										<Anchors>
											<Anchor point="TOPLEFT" relativeTo="$parent" />
											<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
										</Anchors>
										<Layers>
											<Layer level="ARTWORK">
												<FontString parentKey="StringSource" inherits="GameFontHighlight" text="UI_AURA_CLICK" justifyH="CENTER" justifyV="CENTER">
													<Size>
														<AbsDimension x="156" />
													</Size>
													<Anchors>
														<Anchor point="TOP" relativeTo="PowaEditorDisplayAuraSidebar" relativePoint="TOP" x="0" y="-110"/>
													</Anchors>
												</FontString>
											</Layer>
										</Layers>
										<Frames>
											<!-- Displays the icon on the sidebar. Parented to this frame for ease of use. -->
											<Button name="$parentIcon" parentKey="Icon">
												<Size>
													<AbsDimension x="96" y="96" />
												</Size>
												<Anchors>
													<Anchor point="TOP" relativeTo="PowaEditorDisplayAuraSidebar">
														<Offset>
															<AbsDimension x="0" y="-10" />
														</Offset>
													</Anchor>
												</Anchors>
												<Layers>
													<Layer level="OVERLAY">
														<Texture file="Interface\ICONS\TEMP" name="$parentTexture" parentKey="Texture">
															<Size>
																<AbsDimension x="96" y="96" />
															</Size>
															<Anchors>
																<Anchor point="TOPLEFT" relativeTo="$parent">
																	<Offset>
																		<AbsDimension x="0" y="0" />
																	</Offset>
																</Anchor>
																<Anchor point="BOTTOMRIGHT" relativeTo="$parent">
																	<Offset>
																		<AbsDimension x="0" y="0" />
																	</Offset>
																</Anchor>
															</Anchors>
														</Texture>
													</Layer>
												</Layers>
												<Scripts>
													<OnClick>
														PowaEditorDisplayAuraMain:SelectTab(2);
													</OnClick>
												</Scripts>
											</Button>
											<Slider name="$parentOpacity" parentKey="Opacity" inherits="PowaSliderTemplate" />
											<Slider name="$parentSize" parentKey="Size" inherits="PowaSliderTemplate" />
											<Slider name="$parentX" parentKey="X" inherits="PowaSliderTemplate" />
											<Slider name="$parentY" parentKey="Y" inherits="PowaSliderTemplate" />
											<Slider name="$parentSymmetry" parentKey="Symmetry" inherits="PowaSliderTemplate" />
											<Slider name="$parentDeformation" parentKey="Deformation" inherits="PowaSliderTemplate" />
										</Frames>
										<Scripts>
											<OnLoad>
												-- Layout needed.
												PowaLayoutFrame_Init(self);
												self:SetColumns(2, { [1] = { X = 0.5 }, [2] = { X = 0.5 } });
												
												self:SetItem(self.Opacity, { Margins = { 0, 0, 4, 0 }, Padding = { 2, -2, 0, 0 }, Columns = 2 });
												self:SetItem(self.Size, { Margins = { 0, 0, 4, 0 }, Padding = { 2, -2, 0, 0 }, Columns = 2 });
												self:SetItem(self.X, { Margins = { 0, 0, 4, 0 }, Padding = { 2, 2, 0, 0 } });
												self:SetItem(self.Y, { Margins = { 0, 0, 4, 0 }, Padding = { 2, 2, 0, 0 } });
												self:SetItem(self.Symmetry, { Margins = { 0, 0, 4, 0 }, Padding = { 2, 2, 0, 0 } });
												self:SetItem(self.Deformation, { Margins = { 0, 0, 4, 0 }, Padding = { 2, 2, 0, 0 } });
											</OnLoad>
										</Scripts>
									</Frame>
									<Frame name="$parentSelector" parentKey="Selector" inherits="PowaTabDialogTemplate">
										<Anchors>
											<Anchor point="TOPLEFT" relativeTo="$parent" />
											<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
										</Anchors>
										<Frames>
											<Frame name="$parent1" parentKey="Default">
												<Anchors>
													<Anchor point="TOPLEFT" relativeTo="$parent" />
													<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
												</Anchors>
											</Frame>
											<Frame name="$parent2" parentKey="WoW">
												<Anchors>
													<Anchor point="TOPLEFT" relativeTo="$parent" />
													<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
												</Anchors>
											</Frame>
											<Frame name="$parent3" parentKey="Custom">
												<Anchors>
													<Anchor point="TOPLEFT" relativeTo="$parent" />
													<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
												</Anchors>
											</Frame>
											<Frame name="$parent4" parentKey="Text">
												<Anchors>
													<Anchor point="TOPLEFT" relativeTo="$parent" />
													<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
												</Anchors>
											</Frame>
											<Frame name="$parent5" parentKey="Icon">
												<Anchors>
													<Anchor point="TOPLEFT" relativeTo="$parent" />
													<Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
												</Anchors>
											</Frame>
										</Frames>
										<Scripts>
											<OnLoad>
												-- Uses the tab sidebar template.
												PowaTabFrame_Init(self, 2);
												self:RegisterTab(self.Default, "Normal Textures");
												self:RegisterTab(self.WoW, "WoW Textures");
												self:RegisterTab(self.Custom, "Custom Textures");
												self:RegisterTab(self.Text, "Text Aura");
												self:RegisterTab(self.Icon, "Ability Icon");
												-- Dialog accept/close handlers.
												self.AcceptButton:SetScript("OnClick", function()
													print("Save");
													PowaEditorDisplayAuraMain:SelectTab(1);
												end);
												self.CancelButton:SetScript("OnClick", function()
													print("Cancel");
													PowaEditorDisplayAuraMain:SelectTab(1);
												end);
											</OnLoad>
										</Scripts>
									</Frame>
								</Frames>
								<Scripts>
									<OnLoad>
										-- This is actually a tab enabled frame, but we hide all the tabs.
										PowaTabFrame_Init(self, 3);
										self:RegisterTab(self.Config);
										self:RegisterTab(self.Selector);
									</OnLoad>
								</Scripts>
							</Frame>
						</Frames>
						<Scripts>
							<OnLoad>
								PowaLayoutFrame_Init(self);
								self:SetColumns(2, { [1] = { X = 0.3, Y = 1 }, [2] = { X = 0.7, Y = 1 } });
								self:SetItem(self.Sidebar);
								self:SetItem(self.Main, { Padding = { 4, 4, 4, 4 } });
							</OnLoad>
						</Scripts>
					</Frame>
					<Frame name="$parentTimer" parentKey="Timer" inherits="BasicFrameTemplate" hidden="true" />
					<Frame name="$parentStacks" parentKey="Stacks" inherits="BasicFrameTemplate" hidden="true" />
				</Frames>
				<Scripts>
					<OnLoad>						
						PowaTabFrame_Init(self, 1);
						self:RegisterTab(self.Aura, "Aura");
						self:RegisterTab(self.Timer, "Timer");
						self:RegisterTab(self.Stacks, "Stacks");
						print(self.lolattr);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>
</Ui>
