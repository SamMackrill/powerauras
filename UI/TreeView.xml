<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<Script file="TreeView.lua" />
	<Frame name="PowaTreeViewTemplate" virtual="true" inherits="PowaBorderedFrameTemplate">
		<Size>
			<AbsDimension x="172" y="0" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" x="2" y="-2" />
			<Anchor point="BOTTOMLEFT" x="2" y="2" />
		</Anchors>
		<Frames>
			<ScrollFrame name="$parentScroll" parentKey="Scroll" inherits="UIPanelScrollFrameTemplate">
				<Size>
					<AbsDimension x="172" y="0" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-4" />
					<Anchor point="BOTTOMRIGHT" x="-26" y="4" />
				</Anchors>
				<ScrollChild>
					<Frame parentKey="Child">
						<Size>
							<AbsDimension x="140" y="0" />
						</Size>
						<Anchors>
							<Anchor point="TOPLEFT" x="4" y="-4" />
							<Anchor point="BOTTOMLEFT" x="4" y="4" />
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<FontString parentKey="Title" inherits="GameFontNormal" justifyH="CENTER" justifyV="MIDDLE">
									<Size x="140" y="23" />
									<Anchors>
										<Anchor point="TOPLEFT" x="0" y="0" />
										<Anchor point="TOPRIGHT" x="0" y="0" />
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
	</Frame>
	
	<Button name="PowaTreeViewItemTemplate" virtual="true" >
		<Size>
			<AbsDimension x="172" y="24" />
		</Size>
		<NormalFont style="GameFontNormalSmall" />
		<HighlightFont style="GameFontHighlightSmall" />
		<DisabledFont style="GameFontNormalSmall" />
		<ButtonText parentKey="Text">
			<Size>
				<AbsDimension x="0" y="24"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT" x="24" y="0" />
				<Anchor point="RIGHT" x="-24" y="0" />
			</Anchors>
		</ButtonText>
		<HighlightTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphaMode="ADD" />
		<NormalTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphamode="ADD" />
		<DisabledTexture />
		<Frames>
			<Button parentKey="Expand">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" x="4" y="0" />
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-MinusButton-Up" />
				<HighlightTexture file="Interface\Buttons\UI-PlusButton-Hilight" alphamode="ADD" />
				<DisabledTexture file="Interface\Buttons\UI-MinusButton-Disabled" />
				<PushedTexture file="Interface\Buttons\UI-MinusButton-Down" />
				<Scripts>
					<OnClick>
						-- Epicly long line of code right there.
						self:GetParent():GetParent():GetParent():GetParent():ToggleChildren(self:GetParent().Position);
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Button>
</Ui>
