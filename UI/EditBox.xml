<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<Script file="EditBox.lua" />	
	<EditBox name="PowaLabelledEditBoxTemplate" virtual="true" autofocus="false" font="PowaFontHighlight" enableMouse="true">
		<Size>
			<AbsDimension x="70" y="24" />
		</Size>
		<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
			<EdgeSize>
				<AbsValue val="1" />
			</EdgeSize>
			<TileSize>
				<AbsValue val="5" />
			</TileSize>
			<Color r="0" g="0" b="0" a="1" />
			<BorderColor r="0.3" g="0.3" b="0.3" a="0.8" />
		</Backdrop>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-20" bottom="0" />
		</HitRectInsets>
		<Layers>
			<Layer level="OVERLAY">
				<FontString inherits="PowaFontNormal" parentKey="Title" justifyH="LEFT" justifyV="MIDDLE">
					<Size>
						<AbsDimension x="150" y="20" />
					</Size>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" x="3" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<TextInsets>
			<AbsInset left="4" right="4" top="0" bottom="0" />
		</TextInsets>
	</EditBox>
</Ui>
