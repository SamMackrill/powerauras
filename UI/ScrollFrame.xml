<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<Script file="ScrollFrame.lua" />
	<Slider name="PowaScrollBarTemplate" virtual="true" minValue="0" maxValue="0" valueStep="1" defaultValue="0">
		<Size x="18" y="1" />
		<Anchors>
			<Anchor point="TOPRIGHT" x="1" y="-16" />
			<Anchor point="BOTTOMRIGHT" x="0" y="16" /> 
		</Anchors>
		<Frames>
			<Button parentKey="ScrollUp">
				<Size x="18" y="16" />
				<Anchors>
					<Anchor point="TOPRIGHT" x="0" y="16" />
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Up">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</NormalTexture>
				<PushedTexture file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Down" >
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</PushedTexture>
				<DisabledTexture file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Disabled">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</DisabledTexture>
				<HighlightTexture  file="Interface\Buttons\UI-ScrollBar-ScrollUpButton-Highlight" alphaMode="ADD">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</HighlightTexture>
			</Button>
			<Button parentKey="ScrollDown">
				<Size x="18" y="16" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="0" y="-16" />
				</Anchors>
				<NormalTexture file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Up">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</NormalTexture>
				<PushedTexture  file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Down">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</PushedTexture>
				<DisabledTexture file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Disabled">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</DisabledTexture>
				<HighlightTexture file="Interface\Buttons\UI-ScrollBar-ScrollDownButton-Highlight" alphaMode="ADD">
					<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
				</HighlightTexture>
			</Button>
		</Frames>
		<ThumbTexture parentKey="Thumb" file="Interface\Buttons\UI-ScrollBar-Knob">
			<Size x="18" y="16" />
			<TexCoords left="0.20" right="0.80" top="0.25" bottom="0.75" />
		</ThumbTexture>
	</Slider>
</Ui>
