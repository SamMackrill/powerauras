<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<Script file="Checkbox.lua" />
	<CheckButton name="PowaCheckboxTemplate" virtual="true">
		<Size x="150" y="28" />
		<NormalFont style="PowaFontNormal" />
		<DisabledFont style="PowaFontDisable" />
		<HighlightFont style="PowaFontHighlight" />
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up" alphaMode="DISABLE">
			<Size>
				<AbsDimension x="24" y="24" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="2" y="-2" />
			</Anchors>
		</NormalTexture>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check" alphaMode="DISABLE">
			<Size>
				<AbsDimension x="24" y="24" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="2" y="-2" />
			</Anchors>
		</CheckedTexture>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\Buttons\WHITE8X8">
					<Size x="150" y="1" />
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0" />
						<Anchor point="BOTTOMRIGHT" x="0" y="0" />
					</Anchors>
					<Gradient orientation="HORIZONTAL">
						<MinColor r="0" g="0" b="0" a="1" />
						<MaxColor r="0" g="0" b="0" a="0" />
					</Gradient>
				</Texture>			
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="BorderLeft" file="Interface\Buttons\WHITE8X8">
					<Size x="1" y="1" />
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0" />
						<Anchor point="BOTTOMLEFT" x="0" y="0" />
					</Anchors>
					<Color r="1" g="0.82" b="0" a="1" />
				</Texture>
				<Texture parentKey="BorderTop" file="Interface\Buttons\WHITE8X8">
					<Size x="150" y="1" />
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0" />
						<Anchor point="TOPRIGHT" x="0" y="0" />
					</Anchors>
					<Gradient orientation="HORIZONTAL">
						<MinColor r="1" g="0.82" b="0" a="1" />
						<MaxColor r="1" g="0.82" b="0" a="0" />
					</Gradient>
				</Texture>
				<Texture parentKey="BorderBottom" file="Interface\Buttons\WHITE8X8">
					<Size x="150" y="1" />
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="0" y="0" />
						<Anchor point="BOTTOMRIGHT" x="0" y="0" />
					</Anchors>
					<Gradient orientation="HORIZONTAL">
						<MinColor r="1" g="0.82" b="0" a="1" />
						<MaxColor r="1" g="0.82" b="0" a="0" />
					</Gradient>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText parentKey="Text" justifyH="LEFT" justifyV="MIDDLE">
			<Size>
				<AbsDimension x="0" y="28" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" x="28" y="0" />
			</Anchors>
		</ButtonText>
		<Scripts>
			<PostClick>
				self:UpdateColors();
			</PostClick>
			<OnEnter>
				self:UpdateColors();
			</OnEnter>
			<OnLeave>
				self:UpdateColors();
			</OnLeave>
		</Scripts>
	</CheckButton>
	
	<CheckButton name="PowaColorPickerTemplate" inherits="PowaCheckboxTemplate" virtual="true">
		<NormalTexture file="Interface\ChatFrame\ChatFrameColorSwatch" alphaMode="DISABLE">
			<Size>
				<AbsDimension x="16" y="16" />
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="6" y="-6" />
			</Anchors>
			<Color r="1" g="1" b="1" a="1" />
		</NormalTexture>
		<CheckedTexture />
	</CheckButton>
</Ui>
