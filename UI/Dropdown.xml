<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\FrameXML\UI.xsd">
	<Script file="Dropdown.lua" />
	<Button name="PowaDropdownTemplate" virtual="true">
		<Size x="175" y="26" />
        <Backdrop bgFile="Interface\Buttons\WHITE8X8" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="2" right="2" top="2" bottom="2" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="14" />
			</EdgeSize>
			<Color r="0" g="0" b="0" a="1" />
			<BorderColor r="0.3" g="0.3" b="0.3" a="1" />
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString font="PowaFontHighlight" parentKey="Text" text="This is some filler text" justifyH="LEFT" justifyV="MIDDLE">
					<Size x="159" y="22" />
					<Anchors>
						<Anchor point="TOPLEFT" x="8" y="-2" />
						<Anchor point="BOTTOMRIGHT" x="-28" y="2" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Up">
			<Size x="26" y="26" />
			<Anchors>
				<Anchor point="TOPRIGHT" />
				<Anchor point="BOTTOMRIGHT" />
			</Anchors>
		</NormalTexture>
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD">
			<Size x="26" y="26" />
			<Anchors>
				<Anchor point="TOPRIGHT" />
				<Anchor point="BOTTOMRIGHT" />
			</Anchors>
		</HighlightTexture>
		<PushedTexture file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Down">
			<Size x="26" y="26" />
			<Anchors>
				<Anchor point="TOPRIGHT" />
				<Anchor point="BOTTOMRIGHT" />
			</Anchors>
		</PushedTexture>
		<DisabledTexture file="Interface\ChatFrame\UI-ChatIcon-ScrollDown-Disabled">
			<Size x="26" y="26" />
			<Anchors>
				<Anchor point="TOPRIGHT" />
				<Anchor point="BOTTOMRIGHT" />
			</Anchors>
		</DisabledTexture>
	</Button>
	
	<Button name="PowaLabelledDropdownTemplate" inherits="PowaDropdownTemplate" virtual="true">
		<Size x="175" y="26" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString font="PowaFontNormal" parentKey="Label" text="This is some filler text" justifyH="LEFT" justifyV="MIDDLE">
					<Size x="159" y="20" />
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" x="3" y="0" />
						<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="-3" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-20" bottom="0" />
		</HitRectInsets>
	</Button>
	
	<CheckButton name="PowaDropdownItemTemplate" virtual="true">
		<Size x="159" y="20" />
		<HighlightTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphaMode="ADD" />
		<NormalFont style="PowaFontHighlight" />
		<CheckedFont style="PowaFontNormal" />
		<CheckedTexture file="Interface\RaidFrame\ReadyCheck-Ready">
			<Size x="16" y="16" />
			<Anchors>
				<Anchor point="TOPLEFT" x="3" y="-2" />
			</Anchors>
		</CheckedTexture>
		<ButtonText parentKey="Value" justifyH="LEFT" justifyV="MIDDLE">
			<Size x="159" y="20" />
			<Anchors>
				<Anchor point="TOPLEFT" x="21" y="0" />
				<Anchor point="BOTTOMRIGHT" x="-3" y="0" />
			</Anchors>
		</ButtonText>
	</CheckButton>
</Ui>